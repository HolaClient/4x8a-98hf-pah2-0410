<%- include('../partials/head') %>

<body class="bg-zinc-950 relative items-center h-full">
    <div class="w-screen overflow-hidden">
        <div class="antialiased">
            <%- include('../partials/nav') %>
            <%- include('../partials/aside') %>
            <main
            class="p-4 md:ml-64 z-20 -mt-[58px] max-w-full pt-40 md:pt-20 max-h-full min-h-screen shadow-2xl shadow-black backdrop-blur-sm">
            <div id="content">
                <img src="https://cdn.holaclientx.tech/logo.png" onload="showTab('overview')" class="w-0 h-0">
                <div class="flex justify-between items-center">
                    <div class="flex space-x-4 items-center">
                        <div
                            class="bg-zinc-800/50 h-max w-max group-hover:bg-zinc-900/50 group-hover:border-zinc-700 border border-zinc-800/80 backdrop-blur-3xl shadow text-gray-400 rounded-xl p-3">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695Z" clip-rule="evenodd" />
                              </svg>
                        </div>
                        <div class="flex flex-col justify-between w-full">
                            <h1 class="text-gray-200 font-semibold text-xl">Create users</h1>
                            <span class="text-gray-300 text-md">Create new users easily.</span>
                        </div>
                    </div>
                </div>
                <div class="w-full mt-4 grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div class="relative rounded-xl bg-zinc-900/50">
                        <div class="w-full rounded-xl h-40 bg-cover bg-no-repeat bg-center" style="background-image: url('https://cdn.holaclientx.tech/production/assets/plain.png');"></div>
                    <div class="absolute rounded-full w-24 md:w-24 -mt-10 lg:-mt-12 ml-2 md:ml-4 p-1 bg-zinc-950">
                        <img src="<%= data.hcx.avatar %>" class="rounded-3xl">
                    </div>
                    <div class="flex justify-between items-center mt-4 pl-32 md:pl-40 pr-0.5 w-full">
                        <div class=""></div>
                        <div class="flex pr-4 text-gray-300 text-2xl">
                            <%= data.hcx.nickname %>
                        </div>
                    </div>
                    <div class="mt-6 bg-zinc-950 h-full m-3 rounded-xl p-3 border border-transparent border-t-zinc-800/80">
                        <div class="flex flex-col">
                            <span class="text-gray-400">Member since</span>
                            <span class="text-xl text-gray-200"><%= (new Date(data.hcx.date.created)).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }); %></span>
                        </div>
                    </div>
                    </div>
                    <div class="relative md:col-span-3">
                        <div class="w-full grid grid-cols-3 overflow-hidden text-gray-400 items-center rounded-xl border border-zinc-800/80">
                            <div id="tab-overview" onclick="showTab('overview')" class="w-full py-2 text-center rounded-xl cursor-pointer hover:bg-zinc-900/50 duration-300 hover:duration-300 hover:text-gray-300">
                                Overview
                            </div>
                            <div id="tab-vault" onclick="showTab('vault')" class="w-full py-2 text-center rounded-xl cursor-pointer hover:bg-zinc-900/50 duration-300 hover:duration-300 hover:text-gray-300">
                                Vault
                            </div>
                        </div>
                        <div class="w-full" id="user-parent">
                            <div id="user-overview" class="w-full">
                                <div class="mt-4 grid grid-cols-1 text-gray-400 md:grid-cols-3 gap-4 w-full h-max bg-zinc-900/50 border border-zinc-800/80 p-4 rounded-xl">
                                    <div class="w-full flex flex-col">
                                        <span>Nickname:</span>
                                        <input type="text" value="<%= data.hcx.nickname %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                    <div class="w-full flex flex-col">
                                        <span>First name:</span>
                                        <input type="text" value="<%= data.hcx.name.first %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                    <div class="w-full flex flex-col">
                                        <span>Last name:</span>
                                        <input type="text" value="<%= data.hcx.name.last %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                    <div class="w-full flex flex-col">
                                        <span>Username:</span>
                                        <input type="text" value="<%= data.hcx.username %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                    <div class="w-full flex flex-col">
                                        <span>Email:</span>
                                        <input type="text" value="<%= data.hcx.email %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                    <div class="w-full flex flex-col">
                                        <span>Permission:</span>
                                        <input type="number" value="<%= data.hcx.permissions.level %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                </div>
                            </div>
                            <div id="user-vault" class="w-full hidden">
                                <div class="mt-4 grid grid-cols-1 text-gray-400 md:grid-cols-3 gap-4 w-full h-max bg-zinc-900/50 border border-zinc-800/80 p-4 rounded-xl">
                                    <div class="w-full flex flex-col">
                                        <span>Memory:</span>
                                        <input type="number" value="<%= data.resources.memory.total %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                    <div class="w-full flex flex-col">
                                        <span>Storage:</span>
                                        <input type="number" value="<%= data.resources.disk.total %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                    <div class="w-full flex flex-col">
                                        <span>CPU:</span>
                                        <input type="number" value="<%= data.resources.cpu.total %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                    <div class="w-full flex flex-col">
                                        <span>Allocations:</span>
                                        <input type="number" value="<%= data.resources.allocations.total %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                    <div class="w-full flex flex-col">
                                        <span>Backups:</span>
                                        <input type="number" value="<%= data.resources.backups.total %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                    <div class="w-full flex flex-col">
                                        <span>Databases:</span>
                                        <input type="number" value="<%= data.resources.databases.total %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                </div>
                                <div class="mt-4 grid grid-cols-1 text-gray-400 md:grid-cols-2 gap-4 w-full h-max bg-zinc-900/50 border border-zinc-800/80 p-4 rounded-xl">
                                    <div class="w-full flex flex-col">
                                        <span>Coins:</span>
                                        <input type="number" value="<%= data.economy.coins %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                    <div class="w-full flex flex-col">
                                        <span>Credits:</span>
                                        <input type="number" value="<%= data.economy.credits %>" class="w-full text-gray-200 rounded-xl p-2 border-b border-zinc-800 bg-zinc-950/80 outline-none">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
            <%- include('../partials/footer') %>
        </div>
    </div>
    </div>
</body>
</html>