<%- include('../partials/head') %>

<body class="bg-zinc-950 relative items-center h-full">
    <div class="w-screen overflow-hidden">
        <div class="antialiased">
            <%- include('../partials/nav') %>
            <%- include('../partials/aside') %>
            <main
            class="p-4 md:ml-64 z-20 -mt-[58px] max-w-full pt-40 md:pt-20 max-h-full min-h-screen shadow-2xl shadow-black backdrop-blur-sm">
            <div id="content">
                <img src="https://cdn.holaclientx.tech/logo.png" onload="productsLoad()" alt="" class="w-0 h-0">
                <div class="flex justify-between items-center w-full">
                    <div class="flex space-x-4 items-center">
                        <div
                            class="bg-zinc-800/50 h-max w-max group-hover:bg-zinc-900/50 group-hover:border-zinc-700 border border-zinc-800/80 backdrop-blur-3xl shadow text-gray-400 rounded-xl p-3">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                <path fill-rule="evenodd" d="M3 6a3 3 0 0 1 3-3h2.25a3 3 0 0 1 3 3v2.25a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3V6Zm9.75 0a3 3 0 0 1 3-3H18a3 3 0 0 1 3 3v2.25a3 3 0 0 1-3 3h-2.25a3 3 0 0 1-3-3V6ZM3 15.75a3 3 0 0 1 3-3h2.25a3 3 0 0 1 3 3V18a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3v-2.25Zm9.75 0a3 3 0 0 1 3-3H18a3 3 0 0 1 3 3V18a3 3 0 0 1-3 3h-2.25a3 3 0 0 1-3-3v-2.25Z" clip-rule="evenodd" />
                              </svg>                                                                  
                        </div>
                        <div class="flex flex-col justify-between w-full">
                            <h1 class="text-gray-200 font-semibold text-xl">Manage <span class="capitalize"><%= data.name %></span></h1>
                        </div>
                    </div>
                    <button onclick="render('admin/products')" class="rounded-full flex items-center hover:duration-300 duration-300 hover:bg-zinc-800/50 bg-zinc-900/50 border border-zinc-800/80 text-gray-300 px-5 py-2">
                          <span class="">Back</span>
                    </button>
                </div>
                <div class="w-full mt-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="relative rounded-xl bg-zinc-900/50 md:col-span-2 p-4">
                        <div class="flex flex-col">
                            <h1 class="text-gray-300">Name:</h1>
                            <input type="text" id="productName" value="<%= data.name %>" class="p-2 bg-zinc-950 outline-none border border-zinc-800/80 rounded-xl w-full text-gray-300">
                        </div>
                        <div class="flex flex-col">
                            <h1 class="text-gray-300">Icon URL:</h1>
                            <input type="text" id="productIcon" value="<%= data.icon %>" class="p-2 bg-zinc-950 outline-none border border-zinc-800/80 rounded-xl w-full text-gray-300">
                        </div>
                        <div class="flex w-full gap-4 mt-4">
                            <div class="flex flex-col w-1/2">
                                <h1 class="text-gray-300">Coins:</h1>
                                <input type="text" id="productCoins" value="<%= data.coins %>" class="p-2 bg-zinc-950 outline-none border border-zinc-800/80 rounded-xl w-full text-gray-300">
                            </div>
                            <div class="flex flex-col w-1/2">
                                <h1 class="text-gray-300">Price in USD:</h1>
                                <input type="text" id="productCredits" value="<%= data.credits %>" class="p-2 bg-zinc-950 outline-none border border-zinc-800/80 rounded-xl w-full text-gray-300">
                            </div>
                        </div>
                        <div class="w-full grid grid-cols-2 md:grid-cols-3 gap-4 mt-4">
                            <div class="flex flex-col">
                                <h1 class="text-gray-300">Memory:</h1>
                                <input id="productMemory" type="text" value="<%= data.resources.memory %>" placeholder="1024" class="p-2 bg-zinc-950 outline-none border border-zinc-800/80 rounded-xl w-full text-gray-300">
                            </div>
                            <div class="flex flex-col">
                                <h1 class="text-gray-300">Disk:</h1>
                                <input id="productDisk" type="text" value="<%= data.resources.disk %>" placeholder="1024" class="p-2 bg-zinc-950 outline-none border border-zinc-800/80 rounded-xl w-full text-gray-300">
                            </div>
                            <div class="flex flex-col">
                                <h1 class="text-gray-300">CPU:</h1>
                                <input id="productCPU" type="text" value="<%= data.resources.cpu %>" placeholder="100" class="p-2 bg-zinc-950 outline-none border border-zinc-800/80 rounded-xl w-full text-gray-300">
                            </div>
                            <div class="flex flex-col">
                                <h1 class="text-gray-300">Backups:</h1>
                                <input id="productBackups" value="<%= data.resources.backups %>" type="text" placeholder="1" class="p-2 bg-zinc-950 outline-none border border-zinc-800/80 rounded-xl w-full text-gray-300">
                            </div>
                            <div class="flex flex-col">
                                <h1 class="text-gray-300">Allocations:</h1>
                                <input id="productAllocations" value="<%= data.resources.allocations %>" type="text" placeholder="1" class="p-2 bg-zinc-950 outline-none border border-zinc-800/80 rounded-xl w-full text-gray-300">
                            </div>
                            <div class="flex flex-col">
                                <h1 class="text-gray-300">Databases:</h1>
                                <input id="productDatabases"  value="<%= data.resources.databases %>" type="text" placeholder="1" class="p-2 bg-zinc-950 outline-none border border-zinc-800/80 rounded-xl w-full text-gray-300">
                            </div>
                        </div>
                        <div class="w-full gap-4 mt-4 grid grid-cols-2 md:grid-cols-3">
                                <div class="flex flex-col">
                                    <h1 class="text-gray-300">Type:</h1>
                                    <select id="productType" class="p-2 appearance-none bg-zinc-950 outline-none border border-zinc-800/80 rounded-xl w-full text-gray-300">
                                        <option value="server">Server</option>
                                        <option value="package">Package</option>
                                    </select>
                                </div>
                                    <div id="productSoftwareHolder" class="flex flex-col">
                                        <h1 class="text-gray-300">Software:</h1>
                                        <select id="productSoftware" class="p-2 appearance-none bg-zinc-950 outline-none border border-zinc-800/80 rounded-xl w-full text-gray-300"></select>
                                    </div>
                            <div class="flex flex-col">
                                <h1 class="text-gray-300">Permanently delete:</h1>
                                <button onclick="deleteProduct('<%= data.id %>')" class="rounded-full flex items-center hover:duration-300 duration-300 hover:bg-rose-800/50 bg-rose-900/50 border border-rose-800/80 justify-center text-center text-rose-300 w-full p-2">
                                    Delete
                              </button>
                            </div>
                        </div>
                    </div>
                    <div class="relative rounded-xl bg-zinc-900/50 p-4">
                        <h1 class="text-gray-300 text-xl">Image Preview:</h1>
                        <div class="flex items-center w-full justify-center"><img id="productIconPreview" src="<%= data.icon %>" class="rounded-xl w-full max-w-64 h-auto"></div>
                    </div>
                </div>
                <div class="mt-4 flex justify-between items-center px-4 rounded-xl p-2 bg-zinc-900/50 w-full">
                    <span class="text-gray-300">Looks good?</span>
                    <button onclick="modifyProduct('<%= data.id %>')" class="rounded-full flex items-center hover:duration-300 duration-300 hover:bg-emerald-800/50 bg-emerald-900/50 border border-emerald-800/80 text-emerald-300 px-5 py-2">
                          Modify
                    </button>
                </div>
            </div>
        </main>
            <%- include('../partials/footer') %>
        </div>
    </div>
    </div>
</body>
</html>