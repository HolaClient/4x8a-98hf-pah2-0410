<%- include('../../partials/head') %>

<body class="bg-zinc-950 relative items-center h-full">
    <div class="w-screen overflow-hidden">
        <div class="antialiased">
            <%- include('../../partials/nav') %>
            <%- include('../../partials/aside') %>
            <main
            class="p-4 md:ml-64 z-20 -mt-[58px] max-w-full pt-40 md:pt-20 max-h-full min-h-screen shadow-2xl shadow-black backdrop-blur-sm">
            <div id="content">
                <div class="flex justify-between items-center w-full">
                    <div class="flex space-x-4 items-center">
                        <div
                            class="bg-zinc-800/50 h-max w-max group-hover:bg-zinc-900/50 group-hover:border-zinc-700 border border-zinc-800/80 backdrop-blur-3xl shadow text-gray-400 rounded-xl p-3">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                <path d="M3.375 3C2.339 3 1.5 3.84 1.5 4.875v.75c0 1.036.84 1.875 1.875 1.875h17.25c1.035 0 1.875-.84 1.875-1.875v-.75C22.5 3.839 21.66 3 20.625 3H3.375Z" />
                                <path fill-rule="evenodd" d="m3.087 9 .54 9.176A3 3 0 0 0 6.62 21h10.757a3 3 0 0 0 2.995-2.824L20.913 9H3.087Zm6.163 3.75A.75.75 0 0 1 10 12h4a.75.75 0 0 1 0 1.5h-4a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd" />
                              </svg>                              
                        </div>
                        <div class="flex flex-col justify-between w-full">
                            <h1 class="text-gray-200 font-semibold text-xl">Packages</h1>
                            <span class="text-gray-300 text-md">Buy packages/plans here.</span>
                        </div>
                    </div>
                </div>
                <div class="w-full mt-4 grid grid-cols-1 md:grid-cols-4 gap-4">
                    <% for (let i of data) { %>
                        <div class="relative w-full p-2 bg-zinc-900/50 border border-zinc-800/80 rounded-xl shdow-lg shadow-black">
                            <div class="w-full flex flex-col items-center justify-center">
                                <div class="absolute text-gray-400 capitalize text-xs top-2 left-2 rounded-full px-4 py-2 bg-zinc-900 border border-zinc-800/80">
                                    <%= i.type || "Resources" %>
                                </div>
                                <div class="absolute text-gray-400 capitalize text-xs top-2 right-2 rounded-full px-4 py-2 bg-zinc-900 border border-zinc-800/80">
                                    <%= i.period || "Lifetime" %>
                                </div>
                                <h1 class="text-6xl text-gray-300 font-karla pt-4">
                                    <%= i.price?.amount || "Error" %><span class="text-2xl text-gray-400 capitalize"><%= i.price?.type == "coins" ? "coin(s)" : "USD" %></span>
                                </h1>
                                <h1 class="text-gray-300 pt-2 text-lg"><%= i.name %></h1>
                            </div>
                            <div class="grid grid-cols-2 md:grid-cols-3 mt-4 gap-2">
                                <div class="flex flex-col items-center justify-center">
                                    <h1 class="text-xl text-zinc-300"><%= i.resources.memory %> GB</h1>
                                    <span class="text-xs text-zinc-400">Memory</span>
                                </div>
                                <div class="flex flex-col items-center justify-center">
                                    <h1 class="text-xl text-zinc-300"><%= i.resources.disk %> GB</h1>
                                    <span class="text-xs text-zinc-400">Storage</span>
                                </div>
                                <div class="flex flex-col items-center justify-center">
                                    <h1 class="text-xl text-zinc-300"><%= i.resources.cpu %> v</h1>
                                    <span class="text-xs text-zinc-400">CPU</span>
                                </div>
                            </div>
                            <div class="grid grid-cols-2 md:grid-cols-4 mt-4 gap-2">
                                <div class="flex flex-col items-center justify-center">
                                    <h1 class="text-xl text-zinc-300"><%= i.resources.allocations %> u</h1>
                                    <span class="text-xs text-zinc-400">Allocations</span>
                                </div>
                                <div class="flex flex-col items-center justify-center">
                                    <h1 class="text-xl text-zinc-300"><%= i.resources.databases %> u</h1>
                                    <span class="text-xs text-zinc-400">Databases</span>
                                </div>
                                <div class="flex flex-col items-center justify-center">
                                    <h1 class="text-xl text-zinc-300"><%= i.resources.backups %> u</h1>
                                    <span class="text-xs text-zinc-400">Backups</span>
                                </div>
                                <div class="flex flex-col items-center justify-center">
                                    <h1 class="text-xl text-zinc-300"><%= i.coins || "0" %></h1>
                                    <span class="text-xs text-zinc-400">Coin(s)</span>
                                </div>
                            </div>
                            <button onclick="render('market/packages/checkout/<%= i.id %>')" class="w-full shadow-sm shadow-black mt-4 group duration-500 rounded-2xl p-2 items-center flex justify-center hover:bg-zinc-900 bg-zinc-900/20 backdrop-blur-xl text-zinc-400 border border-zinc-800/80">
                                <span class="mr-2 group-hover:mr-4 duration-300 transition-all">Checkout</span>
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
                                </svg>
                            </button>
                        </div>
                    <% } %>
                </div>
            </div>
        </main>
            <%- include('../../partials/footer') %>
        </div>
    </div>
    </div>
</body>
</html>