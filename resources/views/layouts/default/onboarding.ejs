<%- include('./partials/head') %>

<body class="bg-zinc-950 w-screen h-full overflow-x-hidden" style="background-image: url('https://cdn.holaclient.tech/production/X1/banners/plain.png'); background-repeat: no-repeat; background-size: cover;">
    <main class="w-screen h-screen overflow-x-hidden">
        <div class="absolute backdrop-blur-sm bg-gradient-to-br from-transparent via-zinc-950/80 to-zinc-950 w-screen h-screen"></div>
        <section id="a" class="relative w-screen h-screen flex flex-col items-center justify-center">
            <h1 class="text-gray-400 font-bold text-lg md:text-xl">Let's customize your experience</h1>
            <h1 class="text-4xl md:text-5xl text-white font-bold font-nunito">Welcome to HolaClient</h1>
        </section>
        <section id="b" class="hidden opacity-0 relative w-screen h-screen flex flex-col items-center justify-center">
            <div class="relative overflow-hidden rounded-3xl bg-zinc-900/80 backdrop-blur-md w-max h-max p-[1px]">
                <div class="dot blur-md -ml-8 -mt-8 animate-flow absolute p-20 rounded-full bg-sky-400/50"></div>
                <div class="relative max-w-sm md:max-w-md text-center z-20 w-full h-full p-8 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-zinc-900 via-zinc-900 to-zinc-950/90 rounded-3xl">
                    <h1 class="text-zinc-200 text-2xl text-center font-urbanist">Onboarding</h1>
                  <div class="grid grid-cols-1 md:grid-cols-2 w-full gap-4 mt-4">
                    <div class="flex flex-col text-left col-span-2">
                        <span class="text-gray-400 pl-1">Nickname:</span>
                        <input placeholder="Johnny" type="text" class="w-full p-2 bg-zinc-950/80 focus:bg-zinc-950/50 focus:border-black focus:duration-300 duration-300 text-gray-300 rounded-xl border border-zinc-800/80 outline-none">
                    </div>
                    <div class="flex flex-col text-left">
                        <span class="text-gray-400 pl-1">First name:</span>
                        <input placeholder="John" type="text" class="w-full p-2 bg-zinc-950/80 focus:bg-zinc-950/50 focus:border-black focus:duration-300 duration-300 text-gray-300 rounded-xl border border-zinc-800/80 outline-none">
                    </div>
                    <div class="flex flex-col text-left">
                        <span class="text-gray-400 pl-1">Last name:</span>
                        <input placeholder="Doe" type="text" class="w-full p-2 bg-zinc-950/80 focus:bg-zinc-950/50 focus:border-black focus:duration-300 duration-300 text-gray-300 rounded-xl border border-zinc-800/80 outline-none">
                    </div>
                    <div class="flex flex-col text-left col-span-2">
                        <span class="text-gray-400 pl-1">Finalize:</span>
                        <button id="c" onclick="submit()" class="w-full p-2 text-center justify-center flex items-center bg-zinc-950/80 hover:bg-zinc-950/50 hover:border-black hover:duration-300 duration-300 text-gray-300 rounded-xl border border-zinc-800/80 outline-none">
                            Submit
                        </button>
                    </div>
                  </div>
                </div>
            </div>
        </section>
    </main>
</body>
</html>
<script>
    window.onload = () => {
        let a = document.getElementById("a")
        let b = document.getElementById("b")
        setTimeout(() => {
            a.style.opacity = 0
            b.style.opacity = 0
            b.classList.remove("hidden")
            a.style.transition = 'opacity 2s'
            setTimeout(() => {
                a.classList.add("hidden")
                b.style.opacity = 1
                b.style.transition = 'opacity 2s'
            }, 2000);
        }, 1000);
    }
    function submit() {
        let c = document.getElementById("c")
        c.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 animate-spin text-gray-400 text-center"><path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" /></svg>`
    }
</script>