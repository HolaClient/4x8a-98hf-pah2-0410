<div class="flex justify-between items-center w-full">
    <div class="flex space-x-4 items-center">
        <div
            class="bg-zinc-800/50 h-max w-max group-hover:bg-zinc-900/50 group-hover:border-zinc-700 border border-zinc-800/80 backdrop-blur-3xl shadow text-gray-400 rounded-xl p-3">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                <path fill-rule="evenodd" d="M12.963 2.286a.75.75 0 0 0-1.071-.136 9.742 9.742 0 0 0-3.539 6.176 7.547 7.547 0 0 1-1.705-1.715.75.75 0 0 0-1.152-.082A9 9 0 1 0 15.68 4.534a7.46 7.46 0 0 1-2.717-2.248ZM15.75 14.25a3.75 3.75 0 1 1-7.313-1.172c.628.465 1.35.81 2.133 1a5.99 5.99 0 0 1 1.925-3.546 3.75 3.75 0 0 1 3.255 3.718Z" clip-rule="evenodd" />
              </svg>                                  
        </div>
        <div class="flex flex-col justify-between w-full">
            <h1 id="serverName" class="text-gray-200 font-semibold text-xl"></h1>
            <span id="serverDescription" class="text-gray-300 text-md"></span>
        </div>
    </div>
    <div class="grid grid-cols-2 justify-end text-right w-1/2 md:w-1/4 md:flex gap-2 items-center">
        <button id="startBTN" onclick="power('start')" class="border hidden w-full md:max-w-max px-5 border-emerald-700 bg-emerald-700/50 text-emerald-400 py-2 rounded-full">
            <%= lang.nav.start %>
        </button>
        <button id="restartBTN" onclick="power('restart')" class="border hidden w-full md:max-w-max px-5 border-amber-700 bg-amber-700/50 text-amber-400 py-2 rounded-full">
            <%= lang.nav.restart %>
        </button>
        <button id="stopBTN" onclick="power('stop')" class="border hidden w-full md:max-w-max px-5 border-rose-700 bg-rose-700/50 text-rose-400 py-2 rounded-full">
            <%= lang.nav.stop %>
        </button>
        <button id="killBTN" onclick="power('kill')" class="border hidden w-full md:max-w-max px-5 border-purple-700 bg-purple-700/50 text-purple-400 py-2 rounded-full">
            <%= lang.nav.kill %>
        </button>
    </div>
</div>
<ul id="serverLinks" class="w-full flex xl:justify-between border-t mt-4 space-x-4 border-zinc-800/80 overflow-x-scroll xl:overflow-hidden py-2">

</ul>