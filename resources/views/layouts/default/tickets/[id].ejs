<%- include('../partials/head') %>

<body class="bg-zinc-950 relative items-center h-full">
    <div class="w-screen overflow-hidden">
        <div class="antialiased">
            <%- include('../partials/nav') %>
            <%- include('../partials/aside') %>
            <main
                class="p-4 md:ml-64 z-20 -mt-[58px] max-w-full pt-40 md:pt-20 max-h-full min-h-screen shadow-2xl shadow-black backdrop-blur-sm">
                <div id="content">
                    <div class="h-screen max-h-screen -mt-28 md:mt-0">
                        <div class="fixed pt-20 md:pt-0 z-50 bg-zinc-950 w-full">
                            <div class="w-full flex justify-between">
                                <div class="flex space-x-4 items-center">
                                    <div
                                        class="bg-zinc-800/50 h-max w-max group-hover:bg-zinc-900/50 group-hover:border-zinc-700 border border-zinc-800/80 backdrop-blur-3xl shadow text-gray-400 rounded-xl p-3">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                            <path fill-rule="evenodd" d="M1.5 6.375c0-1.036.84-1.875 1.875-1.875h17.25c1.035 0 1.875.84 1.875 1.875v3.026a.75.75 0 0 1-.375.65 2.249 2.249 0 0 0 0 3.898.75.75 0 0 1 .375.65v3.026c0 1.035-.84 1.875-1.875 1.875H3.375A1.875 1.875 0 0 1 1.5 17.625v-3.026a.75.75 0 0 1 .374-.65 2.249 2.249 0 0 0 0-3.898.75.75 0 0 1-.374-.65V6.375Zm15-1.125a.75.75 0 0 1 .75.75v.75a.75.75 0 0 1-1.5 0V6a.75.75 0 0 1 .75-.75Zm.75 4.5a.75.75 0 0 0-1.5 0v.75a.75.75 0 0 0 1.5 0v-.75Zm-.75 3a.75.75 0 0 1 .75.75v.75a.75.75 0 0 1-1.5 0v-.75a.75.75 0 0 1 .75-.75Zm.75 4.5a.75.75 0 0 0-1.5 0V18a.75.75 0 0 0 1.5 0v-.75ZM6 12a.75.75 0 0 1 .75-.75H12a.75.75 0 0 1 0 1.5H6.75A.75.75 0 0 1 6 12Zm.75 2.25a.75.75 0 0 0 0 1.5h3a.75.75 0 0 0 0-1.5h-3Z"clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <div class="flex flex-col justify-between w-full">
                                        <h1 class="text-gray-200 font-semibold text-xl">Ticket - <%= ticket.id %></h1>
                                        <span class="text-gray-300 text-md"><%= ticket.title %>.</span>
                                    </div>
                                </div>
                                <div class="flex space-x-2 items-center">
                                    <button onclick="render('tickets/<%= ticket.id %>')"
                                        class="bg-sky-700/50 backdrop-blur-3xl border border-sky-700 text-sky-400 hover:opacity-80 hover:duration-300 duration-300 rounded-full p-2 w-max h-max items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
                                          </svg>
                                    </button>
                                    <button onclick="render('tickets/<%= ticket.id %>/delete')"
                                        class="bg-rose-700/50 backdrop-blur-3xl border border-rose-700 text-rose-400 hover:opacity-80 hover:duration-300 duration-300 rounded-full p-2 w-max h-max items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                          </svg>
                                    </button>
                                    <button onclick="render('tickets/<%= ticket.id %>/edit')"
                                        class="bg-sky-700/50 backdrop-blur-3xl border border-sky-700 text-sky-400 hover:opacity-80 hover:duration-300 duration-300 rounded-full p-2 w-max h-max items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 6a1.5 1.5 0 1 1-3 0m3 0a1.5 1.5 0 1 0-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-9.75 0h9.75" />
                                          </svg>
                                    </button>
                                </div>
                            </div>
                            <div class="w-full bg-zinc-900 px-5 rounded-full h-0.5 mt-4"></div>
                        </div>
                        <div class="h-full overflow-y-scroll relative">
                            <img onclick="ticket('<%= ticket.id %>')" src="https://cdn.holaclient.tech/logo.png" class="w-0 h-0">
                            <div id="messages" class="flex flex-col pb-20 relative mt-20 -pt-40 my-8 space-y-1 w-full"></div>
                        </div>
                    </div>
                    <div class="bottom-0 md:pb-8 fixed w-full items-center flex justify-between bg-zinc-950 p-2">
                        <div class="rounded-xl w-full flex items-center space-x-2 text-gray-300 bg-zinc-900/80">
                            <input id="ticketInput" onkeydown="ticketSend(event)" placeholder="Send a message..." type="text" class="bg-transparent p-3 outline-none w-full text-gray-200">
                        </div>
                    </div>
                    </div>
            </main>
            <%- include('../partials/footer') %>
        </div>
    </div>
    </div>
</body>
</html>