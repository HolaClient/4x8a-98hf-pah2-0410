<%- include('../partials/head') %>

<body class="bg-zinc-950 relative items-center h-full">
    <div class="w-screen overflow-hidden">
        <div class="antialiased">
            <%- include('../partials/nav') %>
            <%- include('../partials/aside') %>
            <main
                class="p-4 md:ml-64 z-20 -mt-[58px] max-w-full pt-40 md:pt-20 max-h-full min-h-screen shadow-2xl shadow-black backdrop-blur-sm">
                <div id="content">
                    <%- include('../partials/links') %>
                    <div id="page" class="relative">
                        <img onload="players()" src="https://cdn.holaclientx.tech/logo.png" class="w-0 h-0">
                        <div class="grid grid-cols-1 md:grid-cols-2 w-full gap-4 mt-4">
                            <div class="w-full rounded-xl bg-zinc-900/50 border border-zinc-800/80">
                                <div class="w-full flex bg-zinc-950 rounded-t-xl py-2 items-center px-4 justify-between">
                                    <h1 class="text-gray-200 text-xl">Online Players</h1>
                                    <h1 id="playersStats" class="text-gray-200 text-xl">---</h1>
                                </div>
                                <div id="playersOnline" class="flex flex-col relative p-2 justify-center space-y-1 w-full h-full overflow-y-auto">
                                    <h1 class="text-gray-200 py-6 text-center">Loading...</h1>
                                </div>
                            </div>
                            <div class="gap-4 grid grid-cols-1 space-y-0.5 w-full">
                                <div class="w-full rounded-xl bg-zinc-900/50 border border-zinc-800/80">
                                    <div class="w-full flex bg-zinc-950 rounded-t-xl py-2 items-center px-4 justify-between">
                                        <h1 class="text-gray-200 text-xl">Ban Players</h1>
                                    </div>
                                    <div id="playersBans" class="flex flex-col relative p-2 space-y-1 w-full">
                                        <h1 class="text-gray-200 py-6 text-center">Loading...</h1>
                                    </div>
                                </div>
                                <div class="w-full rounded-xl bg-zinc-900/50 border border-zinc-800/80">
                                    <div class="w-full flex bg-zinc-950 rounded-t-xl py-2 items-center px-4 justify-between">
                                        <h1 class="text-gray-200 text-xl">Ban IPs</h1>
                                    </div>
                                    <div id="playersBansIPs" class="flex flex-col space-y-1 w-full p-2">
                                        <h1 class="text-gray-200 py-6 text-center">Loading...</h1>
                                    </div>
                                </div>
                                <div class="w-full rounded-xl bg-zinc-900/50 border border-zinc-800/80">
                                    <div class="w-full flex bg-zinc-950 rounded-t-xl py-2 items-center px-4 justify-between">
                                        <h1 class="text-gray-200 text-xl">Whitelist</h1>
                                    </div>
                                    <div id="playersWhitelist" class="flex flex-col space-x-1 w-full">
                                        <h1 class="text-gray-200 py-6 text-center">Loading...</h1>
                                    </div>
                                </div>
                                <div class="w-full rounded-xl bg-zinc-900/50 border border-zinc-800/80">
                                    <div class="w-full flex bg-zinc-950 rounded-t-xl py-2 items-center px-4 justify-between">
                                        <h1 class="text-gray-200 text-xl">Administrators (OPs)</h1>
                                    </div>
                                    <div id="playersAdmins" class="flex flex-col space-x-1 w-full">
                                        <h1 class="text-gray-200 py-6 text-center">Loading...</h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <%- include('../partials/footer') %>
        </div>
    </div>
    </div>
</body>
</html>