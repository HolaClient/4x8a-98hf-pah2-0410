                                <div class="w-full pr-2">
                                    <label class="block text-gray-300">Servers</label>
                                    <input id="servers" class="w-full bg-zinc-800 rounded-xl outline-none p-2" value="1">
                                </div>

                                <div class="grid grid-cols-1 lg:grid-cols-3 col-span-2 gap-4">
                                    <div class="w-full pr-2">
                                        <label class="block text-gray-300">Allocations</label>
                                        <input id="allocations" class="w-full bg-zinc-800 rounded-xl outline-none p-2" value="1">
                                    </div>
