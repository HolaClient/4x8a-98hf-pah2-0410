                                <div class="w-full pr-2">
                                    <label class="block text-gray-300">Memory</label>
                                    <input id="ram" class="w-full bg-zinc-800 rounded-xl outline-none p-2" value="3072">
                                </div>
                                <div class="w-full pr-2">
                                    <label class="block text-gray-300">Storage</label>
                                    <input id="disk" class="w-full bg-zinc-800 rounded-xl outline-none p-2" value="5120">
                                </div>

                                <div class="w-full pr-2">
                                    <label class="block text-gray-300">CPU</label>
                                    <input id="cpu" class="w-full bg-zinc-800 rounded-xl outline-none p-2" value="150">
