                                    <label class="block text-gray-300">Discord</label>
                                    <input class="w-full bg-zinc-800 rounded-xl outline-none p-2" id="discord"
                                        value="https://discord.gg/CvqRH9TrYK"
                                        placeholder="https://discord.gg/YourInviteHere">
                                </div>
                                <div class="w-full pr-2">
                                    <label class="block text-gray-300">Website</label>
                                    <input class="w-full bg-zinc-800 rounded-xl outline-none p-2" id="website"
                                        value="https://holaclient.tech">
                                </div>
                                <div class="w-full pr-2">
                                    <label class="block text-gray-300">Status</label>
                                    <input class="w-full bg-zinc-800 rounded-xl outline-none p-2" id="status"
                                        value="https://status.holaclient.tech">
                                </div>
                            </div>
                        </div>
