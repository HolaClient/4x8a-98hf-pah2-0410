<!DOCTYPE html>
<html lang="en">
    <% if (installed == true) { %>
        <script>
            window.location.href = "/";
        </script>
    <% } %>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HolaClient | Setup</title>
    <link href="/assets/common/tailwind.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link rel="stylesheet" href="../assets/default/app.css">
    <script src="../assets/default/bundle.js"></script>
</head>

<body class="bg-zinc-950 overflow-hidden flex justify-start items-center w-screen h-screen">
    <div class="absolute -z-20 md:h-screen md:w-screen bg-no-repeat bg-cover" aria-hidden="true" style="background-image: url('https://cdn.holaclient.tech/production/X1/assets/pattern.png');"></div>
    <div class="flex flex-col justify-center w-full text-center md:text-left md:pl-20">
        <h1 class="text-white text-4xl md:text-6xl">Welcome to</h1>
        <h1 class="text-transparent md:max-w-max w-full md:text-7xl font-raleway font-semibold bg-gradient-to-br from-white to-transparent bg-clip-text text-5xl">HolaClient-<span class="font-karla">X1</span></h1>
        <p class="text-gray-300 text-2xl md:text-4xl font-rajdhani">The revolution, is here.</p>
        <div class="flex flex-col md:flex-row px-8 md:px-0 items-center space-x-2 mt-4 bottom-0 absolute md:relative w-full justify-center md:justify-start mb-4 md:mb-0">
            <a data-modal-target="auth-modal" data-modal-toggle="auth-modal" class="border cursor-pointer text-gray-200 w-full md:w-max border-zinc-800/80 rounded-xl bg-gradient-to-br from-zinc-800 via-zinc-900/80 to-zinc-800/50 px-5 py-2">Get Started</a>
            <a href="/setup/import" class="text-gray-200 cursor-pointer px-5 py-2">Import</a><br>
        </div>
    </div>
    
    <div id="auth-modal" id="authh" tabindex="2" aria-hidden="true"
        class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-[60] justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative p-4 w-full max-w-md max-h-full">
            <div class="relative rounded-lg shadow bg-zinc-900">
                <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t border-gray-600">
                    <h3 class="text-lg font-semibold text-white">
                        HolaClient session authentication key
                    </h3>
                    <button type="button"
                        class="text-gray-400 bg-transparent text-sm h-8 w-8 ms-auto inline-flex justify-center items-center hover:text-white"
                        data-modal-toggle="auth-modal">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                            viewBox="0 0 14 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                        </svg>
                    </button>
                </div>
                <div class="p-4 md:p-5">
                    <input id="token" type="text"
                        class="bg-zinc-800 mb-4 outline-none text-gray-200 focus:pl-3 focus:duration-500 duration-500 rounded-lg p-2 w-full focus:bg-zinc-900 border border-zinc-800 focus:border-zinc-700">
                    <button onclick="auth()"
                        class="bg-zinc-950/50 hover:bg-zinc-950/80 text-white inline-flex w-full justify-center font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                        Continue
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script>
        async function auth() {
            let token = document.getElementById('token').value;
            let resp = await fetch('/api/setup', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    token: token
                })
            });
            let data = await resp.json();

            if (data.success == true) {
                toastr.success("Successfully authenticated!")
                const expDate = new Date();
                expDate.setTime(expDate.getTime() + 60 * 60 * 1000)
                document.cookie = `token=${token}; expires=${expDate.toUTCString()}; path=/`;
                window.location.href = '/setup/basic';
            } else {
                toastr.error("Invalid session token!")
            }
        }
    </script>
</body>

</html>