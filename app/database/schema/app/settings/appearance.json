{
    "name": "settings.appearance",
    "properties": {
        "name": {
            "type": "string",
            "default": "HolaClient-X1",
            "minLength": 1,
            "maxLength": 20,
            "pattern": "^[a-zA-Z0-9!@#$%^&*()\\-_+=~`]+$",
            "description": "The name of the application.",
            "required": true
        },
        "logo": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string",
                    "format": "uri",
                    "default": "https://cdn.holaclientx.tech/logo.png",
                    "description": "The logo URL of the application.",
                    "required": true
                },
                "rotate": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether to rotate the logo or not.",
                    "required": false
                },
                "speed": {
                    "type": "string",
                    "default": "5s",
                    "pattern": "^\\d+(s|ms)$",
                    "description": "Rotate speed of the logo.",
                    "required": false
                }
            }
        },
        "banner": {
            "type": "string",
            "format": "uri",
            "default": "https://cdn.holaclientx.tech/production/X1/banners/index.png",
            "description": "The URL of the banner image.",
            "required": true
        },
        "description": {
            "type": "string",
            "default": "Your description here, change this in settings > appearance.",
            "minLength": 1,
            "maxLength": 400,
            "pattern": "^[a-zA-Z0-9!@#$%^&*()\\-_+=~`]+$",
            "description": "The description of the application.",
            "required": false
        },
        "theme": {
            "type": "object",
            "properties": {
                "layouts": {
                    "type": "string",
                    "default": "default",
                    "description": "Layout theme.",
                    "required": true
                },
                "admin": {
                    "type": "string",
                    "default": "default",
                    "description": "Admin theme.",
                    "required": true
                },
                "landing": {
                    "type": "string",
                    "default": "default",
                    "description": "Landing page theme.",
                    "required": true
                }
            }
        },
        "seo": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string",
                    "default": "HolaClient-X1",
                    "description": "SEO title.",
                    "required": false
                },
                "description": {
                    "type": "string",
                    "default": "The all new X series of HolaClient is now live!",
                    "description": "SEO description.",
                    "required": false
                },
                "keywords": {
                    "type": "string",
                    "default": "holaclient, X, holaclient-x, holaclientx, HC-X1",
                    "description": "SEO keywords, comma separated.",
                    "required": false
                }
            }
        }
    },
    "extend": []
}