        <!---- ALERTS ----->
      <%- include('./parts/alert') %>
      <br>
              <% if (req.query.err == "MISSINGID") { %>
                  <div style="border-radius: 15px; text-align: center;" class="alert alert_error">
                  <strong>Please fill in a correct Discord user ID!</strong>
                  <button aria-hidden="true" class="close" type="button">&times;</button>
                  </div>
              <% } else if (req.query.err == "CREATECOUPONINVALIDCHARACTERS") { %>
                  <div style="border-radius: 15px; text-align: center;" class="alert alert_error">
                  <strong>Invalid characters has been found in your coupon code, please change it!</strong>
                  <button aria-hidden="true" class="close" type="button">&times;</button>
                  </div>
              <% } else if (req.query.err == "REVOKECOUPONCANNOTFINDCODE") { %>
                  <div style="border-radius: 15px; text-align: center;" class="alert alert_error">
                  <strong>Couldn't find that coupon in our database!</strong>
                  <button aria-hidden="true" class="close" type="button">&times;</button>
                  </div>
              <% } else if (req.query.err == "MISSINGVARIABLES") { %>
                  <div style="border-radius: 15px; text-align: center;" class="alert alert_success">
                  <strong>No value has been given, coupon creation failed!</strong>
                  <button aria-hidden="true" class="close" type="button">&times;</button>
                  </div>
              <% } %>
              <% if (req.query.err == "CREATECOUPONEMPTY") { %>
                  <div style="border-radius: 15px; text-align: center;" class="alert alert_error"> <button aria-hidden="true" data-dismiss="alert" class="close" type="button">&times;</button> <strong>Please specify at least one field to create a coupon with!</strong> </div>
                  </div>
                  </div>
              <% } else if (req.query.err === "CREATECOUPONLESSTHANONE") { %>
                  <div style="border-radius: 15px; text-align: center;" class="alert alert_error">
                  <strong>We don't support coupon creation with resources less than 1!</strong>
                  <button aria-hidden="true" class="close" type="button">&times;</button>
                  </div>
              <% } if (req.query.err === 'INVALIDID') { %>
                  <div style="border-radius: 15px; text-align: center;" class="alert alert_error">
                  <strong>Make sure this user is signed up on this Dashboard or check if the ID belongs to a valid person!</strong>
                  <button aria-hidden="true" class="close" type="button">&times;</button>
                  </div>
              <% } if (req.query.err === 'none') { %>
                  <div style="border-radius: 15px; text-align: center;" class="alert alert_success">
                  <strong>Successful!</strong>
                  <button aria-hidden="true" class="close" type="button">&times;</button>
                  </div>
              <% } if (req.query.err == "RAMSIZE" || req.query.err == "DISKSIZE" || req.query.err == "CPUSIZE" || req.query.err == "SERVERSIZE") { %>
                  <div style="border-radius: 15px; text-align: center;" class="alert alert_error">
                  <strong>We don't support coupon creation with resources less than 1!</strong>
                  <button aria-hidden="true" class="close" type="button">&times;</button>
                  </div>
              <% } if (req.query.code) { %>
                  <div style="border-radius: 15px; text-align: center;" class="alert alert_success">
                  <strong>Successfully created the coupon "<%= req.query.code %>"</strong>
                  <button aria-hidden="true" class="close" type="button">&times;</button>
                  </div>
               <% } if (req.query.err === 'NOIP') { %>
                  <div style="border-radius: 15px; text-align: center;" class="alert alert_error">
                  <strong>The user's IP is not stored in the database!</strong>
                  <button aria-hidden="true" class="close" type="button">&times;</button>
                  </div>
               <% } if (req.query.err === 'REMOVEACCOUNT') { %>
                  <div style="border-radius: 15px; text-align: center;" class="alert alert_success">
                  <strong>The user has been successfully deleted from the database.</strong>
                  <button aria-hidden="true" class="close" type="button">&times;</button>
                  </div>
          <% } %>
          <div class="card-title">Warning! This feature is still in beta and we recommend not to use this feature until further announcement.</div>
      <div class="row mt-3">
        <div class="col-lg-6">
           <div class="card">
             <div class="card-body">
             <div class="card-title">Appearance</div>
             <hr>
              <div class="form-group">
               <label for="input-6">Name:</label>
               <input id="name" class="form-control form-control-rounded" placeholder="Host Name" value="<%= settings.name %>">
              </div>
              <div class="form-group">
               <label for="input-7">Logo URL:</label>
               <input id="logo" class="form-control form-control-rounded" placeholder="Logo URL" value="<%= settings.logo %>">
              </div>
              <div class="form-group">
                <label for="input-7">Rotate Logo:</label>
                <select id="rotate" class="btn btn-secondary dropdown-toggle" style=" padding: 8px; background-color: #2a3038; border: 1px solid #2c2e33; color: #e4eaec; border-radius: 15px; padding: 8px;">
                  <option value="true">True</option>
                  <option value="false">False</option>
              </select>              
               </div>
               <div class="form-group">
                <label for="input-7">Background:</label>
                <input id="background" class="form-control form-control-rounded" placeholder="Background URL" value="<%= settings.background %>">
               </div>
               <div class="form-group">
                <label for="input-7">Theme:</label>
                <input id="theme" class="form-control form-control-rounded" placeholder="Theme Name" value="<%= settings.defaulttheme %>">
               </div>
              <div class="form-group">
               <button role="button" onclick="updateappearance()" class="btn btn-light btn-round px-5">Update</button>
             </div>
           </div>
           </div>
        </div>

      <!-- Handlers -->
  <script>
function updateappearance() {
  const rotateSelect = document.getElementById('rotate');

  const nameValue = document.querySelector('#name').value;
  const logoValue = document.querySelector('#logo').value;
  const rotateValue = rotateSelect.value;
  const backgroundValue = document.querySelector('#background').value;
  const themeValue = document.querySelector('#theme').value;

  const data = {
    name: nameValue,
    logo: logoValue,
    rotate: rotateValue,
    background: backgroundValue,
    theme: themeValue
  };

  const xhr = new XMLHttpRequest();
  xhr.open('POST', '/update-appearance');
  xhr.setRequestHeader('Content-Type', 'application/json');
  xhr.send(JSON.stringify(data));
  location.reload();
}
  </script>
  <!-- End Handlers -->
