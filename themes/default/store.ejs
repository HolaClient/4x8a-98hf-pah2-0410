      <body className='snippet-body' style="font-size: poppins; background-color: #1b1c1d;" background="<%= settings.background %>"; background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%;>

        <div class="row mt-3">
          <div class="col-lg-6">
             <div class="card">
               <div class="card-body">
               <div class="card-title">Buy CPU</div>
               <hr>
                <div class="form-group">
                 <label for="input-6"><%= settings.api.client.coins.store.cpu.per %>% CPU - <%= settings.api.client.coins.store.cpu.cost %> coins</label>
                 <input type="number" id="cpuAmount" name="id" class="form-control form-control-rounded" placeholder="CPU TO BUY IN '%'">
                </div>
                <div class="form-group">
                 <button onclick="buyCPU()" role="button" class="btn btn-light btn-round px-5"><i class="bi bi-coin"></i> Buy CPU</button>
               </div>
             </div>
             </div>
          </div>
    
          <div class="col-lg-6">
            <div class="card">
               <div class="card-body">
               <div class="card-title">Buy RAM</div>
               <hr>
                <div class="form-group">
                 <label for="input-6"><%= settings.api.client.coins.store.ram.per %>MB RAM - <%= settings.api.client.coins.store.ram.cost %> coins</label>
                 <input type="number" id="ramAmount" class="form-control form-control-rounded" placeholder="RAM TO BUY IN MB">
                </div>
                <div class="form-group">
                 <button onclick="buyRAM()" role="button" class="btn btn-light btn-round px-5"><i class="bi bi-coin"></i> Buy RAM</button>
               </div>
             </div>
             </div>
          </div>
        </div>
    
        <div class="row mt-3">
          <div class="col-lg-6">
             <div class="card">
               <div class="card-body">
               <div class="card-title">Buy Disk</div>
               <hr>
                <div class="form-group">
                 <label for="input-6"><%= settings.api.client.coins.store.disk.per %>MB Disk - <%= settings.api.client.coins.store.disk.cost %> coins</label>
                 <input type="number" id="diskAmount" class="form-control form-control-rounded" placeholder="DISK TO BUY IN MB">
                </div>
                <div class="form-group">
                 <a onclick="buyDisk()" class="btn btn-light btn-round px-5"><i class="bi bi-coin"></i> buy disk</a>
               </div>
             </div>
             </div>
          </div>
    
          <div class="col-lg-6">
            <div class="card">
               <div class="card-body">
               <div class="card-title">Buy Slots</div>
               <hr>
                <div class="form-group">
                 <label for="input-6"><%= settings.api.client.coins.store.servers.per %> slot - <%= settings.api.client.coins.store.servers.cost %> coins</label>
                 <input type="number" id="serversAmount" class="form-control form-control-rounded" placeholder="SERVER SLOTS TO BUY">
                </div>
                <div class="form-group">
                 <a onclick="buyServers()" class="btn btn-light btn-round px-5"><i class="bi bi-coin"></i> buy slots</a>
               </div>
             </div>
             </div>
          </div>
        </div>

  </body>
  <script>
    async function buyCPU() {
    let cpu = encodeURIComponent(document.getElementById("cpuAmount").value) / 10;
    document.location.href = `/buycpu?amount=${cpu}`;
    };
    
    async function buyRAM() {
    let ram = encodeURIComponent(document.getElementById("ramAmount").value) / 1024;
    document.location.href = `/buyram?amount=${ram}`;
    };
    
    async function buyDisk() {
    let disk = encodeURIComponent(document.getElementById("diskAmount").value) / 1024;
    document.location.href = `/buydisk?amount=${disk}`;
    };
    
    async function buyServers() {
    let servers = encodeURIComponent(document.getElementById("serversAmount").value);
    document.location.href = `/buyservers?amount=${servers}`;
    };

    async function buyBackups() {
    let backups = encodeURIComponent(document.getElementById("backupsAmount").value);
    document.location.href = `/buybackups?amount=${backups}`;
    };

    async function buyDatabases() {
    let databases = encodeURIComponent(document.getElementById("databasesAmount").value);
    document.location.href = `/buydatabases?amount=${databases}`;
    };

    async function buyPorts() {
    let ports = encodeURIComponent(document.getElementById("portsAmount").value);
    document.location.href = `/buyports?amount=${ports}`;
    };

    async function buyCoins() {
    let coins = encodeURIComponent(document.getElementById("coinsAmount").value);
    document.location.href = `?err=STRIPEDOWN`;
    };
    </script>
